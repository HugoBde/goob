package goob

templ HomeTemplate() {
	<html>
		<head>
			<title>Goob</title>
			<link href="public/index.css" rel="stylesheet"/>
		</head>
		<body>
			<div class="p-5">
				<a href="/newroom">
					<button type="button" class="border-2 border-black ">Create new Room</button>
				</a>
				<form action="/room">
					<input type="text" name="id" class="border-2 border-gray-400"/>
					<input type="submit" value="Join room" class="border-2 border-black"/>
				</form>
			</div>
		</body>
	</html>
}
