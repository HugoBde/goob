package goob

import ()

templ MessageComponent(msg Message, isOwnMessage bool) {
	<div hx-swap-oob="beforeend:#chat-room">
		if isOwnMessage {
			<li class="flex justify-between bg-emerald-500">
				<div>
					{ msg.Time.Format("15:04 02/01") }
				</div>
				<div>
					{ msg.Content }
				</div>
			</li>
		} else {
			<li class="flex justify-between bg-slate-200">
				<div>
					{ msg.Content }
				</div>
				<div>
					{ msg.Time.Format("15:04 02/01") }
				</div>
			</li>
		}
	</div>
}
